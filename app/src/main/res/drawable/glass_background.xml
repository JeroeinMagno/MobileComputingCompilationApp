<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background layer with transparency -->
    <item>
        <shape android:shape="rectangle">
            <!-- Transparent white for frosted glass effect -->
            <solid android:color="#27C3A8A8"/> <!-- 50% transparent white -->
            <corners android:radius="30dp"/> <!-- Rounded corners for glass look -->
        </shape>
    </item>

    <!-- Optional border for added definition -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="3dp"
                android:color="#80737373" /> <!-- Slightly opaque border -->
            <corners android:radius="20dp"/>
        </shape>
    </item>

</layer-list>
